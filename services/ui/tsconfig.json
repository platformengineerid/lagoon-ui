{
  "compilerOptions": {
    "outDir": "build/lib",
    "target": "ES6",
    "lib": ["es6", "es7", "es2017", "esnext"],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "rootDirs": [
      "src",
      "stories"
    ],
    "baseUrl": "src",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noImplicitAny": false,
    "jsx": "preserve",
    "paths": {
      "@components/*": ["./components/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "build"],
  "ts-node": {
    "transpileOnly": true

  }
}